<div class="absolute-center-export">

  <div id="exportform">
    <h3>Share</h3>
    <%= text_field_tag 'share_url', "#{root_url}stories/#{@story.share_url}/share", class: 'sharebox' %>
    <h3>Export<h3>
    <%= form_tag("/stories/#{params[:id]}/export") do %>
      <div class="radio">
        <%= radio_button_tag(:filetype, "rtf", checked: true) %>
        <%= label_tag(:rtf, "RTF") %>
        <%= radio_button_tag(:filetype, "pdf") %>
        <%= label_tag(:pdf, "PDF") %>
        <%= radio_button_tag(:filetype, "md") %>
        <%= label_tag(:pdf, "Markdown") %>
      </div><br>
      <%= submit_tag 'Export' %>
      <%= button_tag 'Cancel', :type => 'button' %>
    <% end %>
  </div>
</div>
