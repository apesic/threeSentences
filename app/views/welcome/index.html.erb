<div class="container">

    <% unless user_signed_in? %>
      <div class="absolute-center">
      <h1 id="brand">three sentences</h1>
    <% end %>
    <% if user_signed_in? %>
    <div class="absolute-center-icons">
    <div id="profile">

      <h2><%= @user.username %>'s stories</h2><br><br>
      <li><%= link_to 'New Story', new_story_path, class: 'button newstory' %></li>
        <ol>


        <br><br>
<div class="grid">

        <% @user.stories.each do |story| %>

          <%= link_to story do %>
            <div class="grouping">
              <div class="col-1">
                <i class="my-icon"><i></i><i></i><i></i></i><h4><%= story.sentences.size %></h4><br><h6><%= 'sentence'.pluralize(story.sentences.size) %><h6><h5><%= story.name %></h5>
              </div>
            </div>
          <% end %>

        <% end %>

        </ol>
     </div>
    <% else %>
      <p id="tagline">If you can write three sentences,<br> you can write a story.</p>
    <% end %>
  </div>
</div>

